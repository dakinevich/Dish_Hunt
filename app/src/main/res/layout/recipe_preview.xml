<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="180dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:contentPadding="10dp"
    app:contentPaddingTop="3dp"
    app:contentPaddingBottom="3dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/recipe_preview_title"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/flat4"
                android:textSize="14dp"
                android:text="Лазанья под шубой" />
            <ImageView
                android:id="@+id/recipe_preview_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/bookmark"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                app:tint="@color/flat2" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/recipe_preview_img"
                android:layout_width="133dp"
                android:layout_height="92dp"
                android:cropToPadding="false"
                android:src="@drawable/sample_food_1"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ruble"
                    android:layout_marginRight="3dp"
                    app:tint="@color/accent_dark" />
                <TextView
                    android:id="@+id/recipe_preview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="320"
                    android:textSize="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock"
                    android:layout_marginRight="3dp"
                    app:tint="@color/accent_dark"/>
                <TextView
                    android:id="@+id/recipe_preview_cook_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="35м"
                    android:textSize="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/portion"
                    android:layout_marginRight="3dp"
                    app:tint="@color/accent_dark"/>
                <TextView
                    android:id="@+id/recipe_preview_portions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="4"
                    android:textSize="10dp"/>

            </LinearLayout>

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:textColor="@color/flat2"
                android:textSize="9dp"
                android:text="50 мин"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"

                android:textColor="@color/flat2"
                android:textSize="9dp"
                android:text="3 порции"/>-->
        </LinearLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>
