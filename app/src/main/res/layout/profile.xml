<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:fabCustomSize="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="65dp"
        android:backgroundTint="@color/accent_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/add"
        app:tint="@color/accent_dark">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_back_60"
            android:layout_marginTop="-60dp"
            android:paddingTop="60dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/user"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                app:tint="@color/flat1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/accent_light"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="10dp"
                android:text="Виктория Сикрет"
                android:textSize="24dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/background"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="20dp"
                android:text="Quisque vel vulputate lectus. Vivamus maximus vitae sapien nec ornare. Etiam vel malesuada turpis. Aliquam aliquet laoreet viverra. In et quam in nisl lobortis lobortis. Nulla eu varius purus, sed mattis enim. "
                android:textSize="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/saved_recipes_btn"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Рецепты"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/accent_dark"
                android:background="@drawable/rounded_fill_light_20"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/saved_collections_btn"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/flat2"
                android:text="Коллекции"
                android:background="@drawable/rounded_corner_light_20"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/results_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/recipe_preview"
            android:paddingHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
