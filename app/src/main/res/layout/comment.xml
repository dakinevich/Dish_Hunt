<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="15dp">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded_back_60"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/comment_img"/>

    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Виктория Сикрет"
        app:layout_constraintLeft_toRightOf="@+id/comment_img"
        app:layout_constraintStart_toEndOf="@+id/comment_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/flat4"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/comment_time"
        android:text="день назад"
        app:layout_constraintLeft_toRightOf="@id/comment_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="30dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/flat3"
        android:textSize="14sp"
        android:layout_marginLeft="7dp"/>
    <TextView
        android:id="@+id/comment_text"
        app:layout_constraintTop_toBottomOf="@id/comment_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="3dp"
        android:text="Неплохой рецепт мне очень понравился"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/flat3"
        android:textSize="14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>