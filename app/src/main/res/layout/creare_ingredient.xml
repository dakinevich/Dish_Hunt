<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/create_ingredient_minus"
        android:layout_gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/minus"
        app:tint="@color/negative" />
    <TextView
        android:id="@+id/create_ingredient_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/flat2"
        android:fontFamily="@font/roboto_bold"
        android:text="Mорковь"/>
    <EditText
        android:textAlignment="center"
        android:inputType="number"
        android:id="@+id/create_ingredient_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/accent_light"
        android:fontFamily="@font/roboto_bold"
        android:text="12"/>
    <TextView
        android:id="@+id/create_ingredient_amount_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/accent_light"
        android:fontFamily="@font/roboto_bold"
        android:text=" шт"/>

</LinearLayout>